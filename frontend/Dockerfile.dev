FROM node:18-alpine

# Install Python and build tools for sqlite3 compilation
RUN apk add --no-cache python3 make g++ sqlite

WORKDIR /app

# Install dependencies
COPY package.json package-lock.json* ./
RUN npm ci || npm install

# Copy app
COPY . .

# Create db directory
RUN mkdir -p /app/db

EXPOSE 3000

# Start dev server (database initialization will be handled by docker-compose command)
CMD ["npm", "start"]
