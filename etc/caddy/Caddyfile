# Use the IP address with HTTPS and self-signed certificate
https://192.168.4.25 {
    tls internal
    reverse_proxy backend:8080 {
        header_up Upgrade {http.request.header.Upgrade}
        header_up Connection {http.request.header.Connection}
    }
}

# Also serve on port 443 directly
:443 {
    tls internal
    reverse_proxy backend:8080 {
        header_up Upgrade {http.request.header.Upgrade}
        header_up Connection {http.request.header.Connection}
    }
}
